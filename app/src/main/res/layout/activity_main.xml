<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.android.myappportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_nanodegree_apps"
        android:textColor="#90CAF9"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/popular_movies"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="@string/popular_movies"
        android:textSize="14sp"
        android:layout_margin="12dp"
        android:background="#EEEEEE"
        android:layout_marginBottom="12dp"
        android:onClick="lanuchPopularMovies"
        />

    <Button
        android:id="@+id/stock_hawk"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="@string/stock_hawk"
        android:textSize="14sp"
        android:background="#EEEEEE"
        android:layout_marginBottom="12dp"
        android:onClick="lanuchStockHawk"

        />

    <Button
        android:id="@+id/build_it_bigger"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="@string/build_it_bigger"
        android:textSize="14sp"
        android:background="#EEEEEE"
        android:layout_marginBottom="12dp"
        android:onClick="lanuchBuildItBigger"
        />

    <Button
        android:id="@+id/make_your_app_material"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="@string/make_your_app_material"
        android:textSize="14sp"
        android:background="#EEEEEE"
        android:layout_marginBottom="12dp"
        android:onClick="lanuchMakeApp"
        />

    <Button
        android:id="@+id/go_ubiquitous"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="@string/go_ubiquitous"
        android:textSize="14sp"
        android:background="#EEEEEE"
        android:layout_marginBottom="12dp"
        android:onClick="lanuchGoUbiquitous"
        />

    <Button
        android:id="@+id/capston"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="@string/capston"
        android:textSize="14sp"
        android:background="#EEEEEE"
        android:onClick="lanuchCapstone"
        />
</LinearLayout>
